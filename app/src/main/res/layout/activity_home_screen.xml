<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/App"
    android:id="@+id/fullscreen_content"
    tools:context=".HomeScreen">

    <!-- Status Bar -->
    <LinearLayout
        style="@style/HomeScreenStatusBar"
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_home_statusbar">

        <TextClock
            style="@style/HomeScreenStatusBarItem"
            android:id="@+id/status_bar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/HomeScreenStatusBarItem"
            android:id="@+id/status_bar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            style="@style/HomeScreenStatusBarItem"
            android:id="@+id/status_bar_battery"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/battery_3"/>

        <ImageView
            style="@style/HomeScreenStatusBarItem"
            android:id="@+id/status_bar_signal"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:src="@drawable/signal_2"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="false"
        android:keepScreenOn="true">

        <LinearLayout
            android:id="@+id/app_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- App Buttons will be added programatically. -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    tools:context=".HomeScreen">

    <!-- Header -->
    <LinearLayout
        style="@style/HomeScreenAppButton"
        android:padding="0dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_camera_header">

        <ImageView
            style="@style/AppHeaderBack"
            android:src="@drawable/arrow_left"
            android:onClick="finish"/>

        <TextView
            style="@style/AppHeader"
            android:text="@string/app_magnifier"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/app_magnifier"
            android:padding="@dimen/default_padding_s"
            android:id="@+id/btn_zoom_in"
            android:text="+"
            android:onClick="zoomIn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/app_magnifier"
            android:padding="@dimen/default_padding_s"
            android:id="@+id/btn_zoom_out"
            android:text="-"
            android:onClick="zoomOut" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="StatusBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/default_padding_s</item>
    </style>

    <style name="StatusBarItem">
        <item name="android:layout_marginRight">@dimen/default_padding_s</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="HomeScreenAppButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/default_padding_m</item>
        <item name="android:drawablePadding">@dimen/default_padding_s</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

</resources>

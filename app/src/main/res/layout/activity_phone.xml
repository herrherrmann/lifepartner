<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="de.hwr_berlin.lifepartner.SettingsActivity">

    <!-- Header -->
    <LinearLayout
        style="@style/HomeScreenAppButton"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_phone_header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_padding_m"
            android:src="@drawable/arrow_left"
            android:onClick="finish"/>

        <TextView
            style="@style/AppHeader"
            android:text="@string/app_btn_phone"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:id="@+id/pager"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       tools:context="de.hwr_berlin.lifepartner.PhoneActivity"/>

</LinearLayout>
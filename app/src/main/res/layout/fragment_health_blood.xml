<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/ScrollView"
            tools:context="de.hwr_berlin.lifepartner.HealthBloodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/main_padding_s"
            android:drawableStart="@drawable/blueetooth"
            android:drawablePadding="@dimen/main_padding_s"
            android:text="Suche ..."
            android:textColor="@color/main_text"
            android:textSize="@dimen/main_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_padding_s"
            android:text="Bitte verbinden Sie Ihr Blutzucker-MessgerÃ¤t via Bluetooth und beginnen Sie mit der Messung."
            android:textSize="@dimen/main_text_size_small"
            android:textColor="@color/main_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Letzte Messungen:"
            android:textSize="@dimen/main_text_size"
            android:textStyle="bold"
            android:textColor="@color/main_text"
            android:paddingTop="@dimen/main_padding_s"
            android:paddingLeft="@dimen/main_padding_s"
            android:paddingRight="@dimen/main_padding_s"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/main_padding_s"
                android:text="4,2 mmol/l"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/main_text"
                android:drawableStart="@drawable/blood"
                android:drawablePadding="@dimen/main_padding_s"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="10.10.14 \n18:14"
                android:textSize="@dimen/main_text_size_small"
                android:textColor="@color/main_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/main_padding_s"
                android:text="5,3 mmol/l"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/main_text"
                android:drawableStart="@drawable/blood"
                android:drawablePadding="@dimen/main_padding_s"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="09.10.14\n17:58"
                android:textSize="@dimen/main_text_size_small"
                android:textColor="@color/main_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/main_padding_s"
                android:text="3,7 mmol/l"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/main_text"
                android:drawableStart="@drawable/blood"
                android:drawablePadding="@dimen/main_padding_s"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="09.10.14\n7:03"
                android:textSize="@dimen/main_text_size_small"
                android:textColor="@color/main_text"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

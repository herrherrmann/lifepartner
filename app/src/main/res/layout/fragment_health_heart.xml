<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollView"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="de.hwr_berlin.lifepartner.HealthHeartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/health_heart_icon"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/main_padding_s"
            android:src="@drawable/heart_pink"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Aktuelle Messung:"
            android:textSize="@dimen/main_text_size"
            android:textColor="@color/app_health"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="80 bpm"
            android:textSize="@dimen/main_text_size_big"
            android:textColor="@color/app_health_secondary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/main_padding_s"/>

        <Button
            style="@style/Button"
            android:text="Jetzt speichern"
            android:drawableStart="@drawable/check_white"
            android:background="@color/main_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Letzte Messungen:"
            android:textSize="@dimen/main_text_size"
            android:textStyle="bold"
            android:textColor="@color/main_text"
            android:paddingTop="@dimen/main_padding_m"
            android:paddingLeft="@dimen/main_padding_s"
            android:paddingRight="@dimen/main_padding_s"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/main_padding_s"
                android:text="76 bpm"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/main_text"
                android:drawableStart="@drawable/heart_rate"
                android:drawablePadding="@dimen/main_padding_s"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="10.10.14 | 18:14"
                android:textSize="@dimen/main_text_size_small"
                android:textColor="@color/main_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/main_padding_s"
                android:text="83 bpm"
                android:textSize="@dimen/main_text_size"
                android:textColor="@color/main_text"
                android:drawableStart="@drawable/heart_rate"
                android:drawablePadding="@dimen/main_padding_s"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="09.10.14 | 17:58"
                android:textSize="@dimen/main_text_size_small"
                android:textColor="@color/main_text"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

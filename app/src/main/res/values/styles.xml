<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen"></style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="StatusBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/default_padding_s</item>
        <item name="android:paddingRight">@dimen/default_padding_s</item>
        <item name="android:paddingTop">@dimen/default_padding_s</item>
        <item name="android:paddingBottom">@dimen/default_padding_s</item>
    </style>

    <style name="StatusBarItem">
        <item name="android:layout_marginRight">@dimen/default_padding_xs</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="AppHeaderBack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/default_padding_m</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="AppHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="HomeScreenAppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/default_padding_m</item>
        <item name="android:drawablePadding">@dimen/default_padding_s</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <!-- Phone -->
    <style name="PhoneButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:padding">@dimen/default_padding_s</item>
        <item name="android:background">@drawable/shape_phone_btn</item>
    </style>

    <style name="PhoneButtonCall">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:padding">@dimen/default_padding_s</item>
        <item name="android:background">@drawable/shape_phone_btn_call</item>
    </style>

    <style name="PhoneButtonGrey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:padding">@dimen/default_padding_s</item>
        <item name="android:background">@drawable/shape_phone_btn_others</item>
    </style>

    <!-- SMS -->
    <style name="SmsButtonNew">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding_m</item>
        <item name="android:background">@color/app_sms_secondary</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="SmsList" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fillViewport">false</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

</resources>
